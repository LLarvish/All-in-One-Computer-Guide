  <script>
    // Mock parts data
    const parts = [
      {id:1,name:'Intel Core i5-13600K',cat:'cpu',price:289},
      {id:2,name:'AMD Ryzen 5 7600X',cat:'cpu',price:229},
      {id:3,name:'ASUS Prime Z790-A',cat:'motherboard',price:229},
      {id:4,name:'MSI B650 Tomahawk',cat:'motherboard',price:179},
      {id:5,name:'NVIDIA RTX 4070',cat:'gpu',price:599},
      {id:6,name:'AMD Radeon RX 7800 XT',cat:'gpu',price:549},
      {id:7,name:'Corsair Vengeance 32GB (2x16) DDR5',cat:'ram',price:129},
      {id:8,name:'Samsung 990 EVO 1TB NVMe',cat:'storage',price:119},
      {id:9,name:'Seagate Barracuda 2TB HDD',cat:'storage',price:54},
      {id:10,name:'Corsair RM850x 850W',cat:'psu',price:139},
      {id:11,name:'NZXT H510 Case',cat:'case',price:79}
    ];

    const partsList = document.getElementById('partsList');
    const filter = document.getElementById('filterCat');
    const selected = new Map();
    const selectedListEl = document.getElementById('selectedList');
    const totalPriceEl = document.getElementById('totalPrice');
    const stepsEl = document.getElementById('steps');

    function renderParts(category='all'){
      partsList.innerHTML='';
      const filtered = category==='all' ? parts : parts.filter(p => p.cat===category);
      filtered.forEach(p => {
        const el = document.createElement('div'); el.className='part';
        el.innerHTML = `<h4>${p.name}</h4><div class="small">Category: ${p.cat.toUpperCase()} — $${p.price}</div><div style="margin-top:8px"><button data-id="${p.id}" class="chip selectBtn">Select</button></div>`;
        partsList.appendChild(el);
      })
    }

    filter.addEventListener('change', e=> renderParts(e.target.value));
    renderParts();

    // selection
    document.addEventListener('click', e=>{
      if(e.target.matches('.selectBtn')){
        const id = Number(e.target.dataset.id);
        const part = parts.find(p=>p.id===id);
        if(selected.has(id)) selected.delete(id); else selected.set(id, part);
        updateSummary();
      }
    });

    function updateSummary(){
      if(selected.size===0) selectedListEl.textContent='— none —';
      else selectedListEl.innerHTML = Array.from(selected.values()).map(p=>`${p.name} <span class=\"small\">($${p.price})</span>`).join('<br>');
      const total = Array.from(selected.values()).reduce((s,p)=>s+p.price,0);
      totalPriceEl.textContent = `$${total}`;
    }

    document.getElementById('clearSelection').addEventListener('click', ()=>{selected.clear(); updateSummary();});

    // Steps — interactive checklist
    const steps = [
      {id:1,title:'Prepare workspace',desc:'Clear a clean, static-free surface. Gather tools: screwdriver, anti-static wrist strap, thermal paste (if needed).'},
      {id:2,title:'Install CPU',desc:'Open the CPU socket, align the CPU triangle with the socket marker, lower gently and lock the retention arm.'},
      {id:3,title:'Install CPU cooler',desc:'If using a stock or aftermarket cooler, apply thermal paste if required, and mount according to manufacturer instructions.'},
      {id:4,title:'Install RAM',desc:'Insert RAM sticks into the recommended slots (usually A2/B2). Push until the latches click.'},
      {id:5,title:'Install motherboard into case',desc:'Place I/O shield, align motherboard standoffs, screw the board in place.'},
      {id:6,title:'Install GPU',desc:'Insert GPU into the top PCIe x16 slot and secure with screws. Connect PCIe power if required.'},
      {id:7,title:'Connect storage & PSU',desc:'Mount SSD/HDD, connect SATA or NVMe, and attach power connectors from the PSU.'},
      {id:8,title:'First boot & BIOS',desc:'Power on, enter BIOS (Del/F2), check that CPU, RAM, and storage are detected. Set boot order.'},
      {id:9,title:'Install OS & drivers',desc:'Install your OS of choice and update GPU and chipset drivers.'}
    ];

    function renderSteps(){
      steps.forEach(s=>{
        const el = document.createElement('div'); el.className='step'; el.dataset.id=s.id;
        el.innerHTML = `<div class="num">${s.id}</div><div><strong>${s.title}</strong><div class="small">${s.desc}</div></div><div style="margin-left:auto"><input type=checkbox class="stepChk" title="Mark as done"></div>`;
        stepsEl.appendChild(el);
      });
    }
    renderSteps();

    // Step completion
    document.addEventListener('change', e=>{
      if(e.target.classList.contains('stepChk')){
        const step = e.target.closest('.step');
        if(e.target.checked) step.classList.add('completed'); else step.classList.remove('completed');
      }
    });

    // Download checklist
    document.getElementById('downloadChecklist').addEventListener('click', ()=>{
      const lines = ['Build Checklist', '=================', '', 'Selected Components:'];
      Array.from(selected.values()).forEach(p=> lines.push(`- ${p.name} — $${p.price}`));
      lines.push('', 'Steps:', '');
      steps.forEach(s=> lines.push(`${s.id}. ${s.title} — ${s.desc}`));
      const blob = new Blob([lines.join('\n')], {type:'text/plain'});
      const url = URL.createObjectURL(blob);
      const a = document.createElement('a'); a.href = url; a.download = 'pc-build-checklist.txt'; document.body.appendChild(a); a.click(); a.remove(); URL.revokeObjectURL(url);
    });

    // Print
    document.getElementById('printBtn').addEventListener('click', ()=> window.print());

    // Small tour
    document.getElementById('startTour').addEventListener('click', ()=>{
      alert('Tip: Select components on the right, then follow the steps and mark each step complete.');
    });

    // Accessibility: keyboard shortcut to toggle power chip
    document.addEventListener('keydown', e=>{ if(e.key==='p') alert('Power checklist:\n- PSU connectors\n- 24-pin ATX\n- CPU EPS 8-pin\n- GPU PCIe power');});

  </script>
</body>
</html>
