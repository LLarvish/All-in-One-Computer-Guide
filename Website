  <main>
    <section class="card">
      <h2>Parts Checklist</h2>
      <label>Filter by category:</label>
      <select id="filterCat">
        <option value="all">All</option>
        <option value="cpu">CPU</option>
        <option value="gpu">GPU</option>
        <option value="motherboard">Motherboard</option>
        <option value="storage">Storage</option>
        <option value="psu">PSU</option>
      </select>
      <div id="partsList" class="grid"></div>
    </section>

    <section class="card">
      <h2>Build Steps</h2>
      <div id="steps"></div>
    </section>

    <section class="card">
      <h2>Build Summary</h2>
      <div id="selectedList" class="small">â€” none selected â€”</div>
      <p><strong>Total:</strong> <span id="totalPrice">$0</span></p>
      <button id="downloadChecklist">Download Checklist</button>
    </section>
  </main>

  <footer>
    <p>Â© 2025 BuildWise. Deploy-ready mockup for Netlify.</p>
  </footer>

  <script>
    const parts = [
      {id:1,name:'Intel Core i5-13600K',cat:'cpu',price:289},
      {id:2,name:'AMD Ryzen 5 7600X',cat:'cpu',price:229},
      {id:3,name:'ASUS Prime Z790-A',cat:'motherboard',price:229},
      {id:4,name:'NVIDIA RTX 4070',cat:'gpu',price:599},
      {id:5,name:'Samsung 990 EVO 1TB NVMe',cat:'storage',price:119},
      {id:6,name:'Corsair RM850x 850W',cat:'psu',price:139}
    ];

    const steps = [
      'Prepare workspace',
      'Install CPU',
      'Install cooler and RAM',
      'Mount motherboard',
      'Install GPU',
      'Connect storage and PSU',
      'Boot and install OS'
    ];

    const partsList = document.getElementById('partsList');
    const filter = document.getElementById('filterCat');
    const selectedList = document.getElementById('selectedList');
    const totalPrice = document.getElementById('totalPrice');
    const selected = new Map();

    function renderParts(category='all'){
      partsList.innerHTML='';
      const filtered = category==='all'?parts:parts.filter(p=>p.cat===category);
      filtered.forEach(p=>{
        const el=document.createElement('div');
        el.className='part';
        el.innerHTML=`<h4>${p.name}</h4><div class='small'>${p.cat.toUpperCase()} â€” $${p.price}</div><button data-id='${p.id}'>Select</button>`;
        partsList.appendChild(el);
      });
    }

    function updateSummary(){
      if(selected.size===0){selectedList.textContent='â€” none selected â€”';totalPrice.textContent='$0';return;}
      selectedList.innerHTML=Array.from(selected.values()).map(p=>`${p.name} ($${p.price})`).join('<br>');
      const total=Array.from(selected.values()).reduce((sum,p)=>sum+p.price,0);
      totalPrice.textContent='$'+total;
    }

    document.addEventListener('click',e=>{
      if(e.target.tagName==='BUTTON' && e.target.dataset.id){
        const id=Number(e.target.dataset.id);
        const part=parts.find(p=>p.id===id);
        if(selected.has(id)) selected.delete(id); else selected.set(id,part);
        updateSummary();
      }
    });

    filter.addEventListener('change',e=>renderParts(e.target.value));
    renderParts();

    // Steps render
    const stepsEl=document.getElementById('steps');
    steps.forEach((s,i)=>{
      const div=document.createElement('div');
      div.innerHTML=`<input type='checkbox' id='s${i}'> <label for='s${i}'>${i+1}. ${s}</label>`;
      stepsEl.appendChild(div);
    });

    // Download checklist
    document.getElementById('downloadChecklist').addEventListener('click',()=>{
      const lines=['PC Build Checklist','','Selected parts:'];
      Array.from(selected.values()).forEach(p=>lines.push(`- ${p.name} â€” $${p.price}`));
      lines.push('','Steps:');
      steps.forEach((s,i)=>lines.push(`${i+1}. ${s}`));
      const blob=new Blob([lines.join('\n')],{type:'text/plain'});
      const a=document.createElement('a');
      a.href=URL.createObjectURL(blob);
      a.download='buildwise-checklist.txt';
      a.click();
    });
  </script>
